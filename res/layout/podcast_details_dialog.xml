<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/podcast_dialog_artwork"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/podcast_dialog_collection_name"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collection Name"/>
    <TextView
        android:id="@+id/podcast_dialog_artist_name"
        android:layout_below="@id/podcast_dialog_collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist Name"/>
    <TextView
        android:id="@+id/podcast_dialog_primary_genre"
        android:layout_below="@id/podcast_dialog_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Primary Genre"/>
    <TextView
        android:id="@+id/podcast_dialog_genres"
        android:layout_below="@id/podcast_dialog_primary_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genre list"/>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unsubscribe"/>
</RelativeLayout>